<!DOCTYPE html>
<html>
<head>
  <title>Sucoin</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div class="main">

  <div class="header">
    <div class="header_resize">
      <div class="menu_nav">
        <ul>
          <% if params[:controller].eql? "home" %><li class="active"><% else %><li><% end %><%= link_to 'Home', :controller => 'home' %></li>
          <% if params[:controller].eql? "offers" %><li class="active"><% else %><li><% end %><%= link_to 'Offers', :controller => 'offers' %></li>
          <% if params[:controller].eql? "wants" %><li class="active"><% else %><li><% end %><%= link_to 'Wants', :controller => 'wants' %></li>
          <% if params[:controller].eql? "trades" %><li class="active"><% else %><li><% end %><a href="blog.html">Trade</a></li>
          
          <li><a href="contact.html">Sign-out</a></li>
        </ul>
      </div>
      <div class="logo">
        <h1><a href="index.html"><span>SU Coin</span> <small>Exponential trade</small></a></h1>
      </div>
      <div class="clr"></div>
    </div>
  </div>

  <div class="content">
    <div class="content_resize">

		<%= yield %>

	</div>
  </div>

</body>
</html>
